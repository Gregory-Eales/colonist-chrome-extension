  
{
  "manifest_version": 2,
  "name": "Colonist Helper",
  "version": "1.0",
  "description": "This helps you with Colonist.io",
  "content_scripts": [
    {
      "matches": [
        "https://colonist.io/"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}